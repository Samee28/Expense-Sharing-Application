// Choose your provider via the connection string in DATABASE_URL
// Defaults to SQLite for quick demos, but you can use PostgreSQL or MySQL.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  name  String
  groups GroupMember[]
}

model Group {
  id       String @id @default(cuid())
  name     String @unique
  members  GroupMember[]
  expenses Expense[]
  settlements Settlement[]
  ledger   LedgerEntry[]
}

model GroupMember {
  id      String @id @default(cuid())
  groupId String
  userId  String
  group   Group @relation(fields: [groupId], references: [id])
  user    User  @relation(fields: [userId], references: [id])

  @@unique([groupId, userId])
}

model Expense {
  id          String  @id @default(cuid())
  groupId     String
  payerId     String
  amount      Float
  description String?
  splitType   String
  // Store splits as JSON string for SQLite compatibility
  splits      String?
  createdAt   DateTime @default(now())
  group       Group    @relation(fields: [groupId], references: [id])
}

model Settlement {
  id          String  @id @default(cuid())
  groupId     String
  fromUserId  String
  toUserId    String
  amount      Float
  note        String?
  createdAt   DateTime @default(now())
  group       Group    @relation(fields: [groupId], references: [id])
}

model LedgerEntry {
  id           String  @id @default(cuid())
  groupId      String
  type         String  // "EXPENSE_SPLIT" or "SETTLEMENT"
  createdAt    DateTime @default(now())
  // Store metadata as JSON string for SQLite compatibility
  metadata     String?
  fromUserId   String
  toUserId     String
  amount       Float
  expenseId    String?
  settlementId String?
  group        Group    @relation(fields: [groupId], references: [id])
}
